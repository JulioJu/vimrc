{
  // https://github.com/neoclide/coc.nvim/wiki/Using-coc-extensions
  // To disable automatic update, change settings: coc.preferences.extensionUpdateCheck to "never".
  "coc.preferences.extensionUpdateCheck": "never",

  // https://github.com/neoclide/coc.nvim/issues/666#issuecomment-481112885
  // "diagnostic.messageTarget": "echo",

  // https://github.com/neoclide/coc.nvim/issues/700
  // "coc.preferences.diagnostic.displayByAle": true,
  "coc.preferences.diagnostic.signOffset": 9999999,

  // command used for jump to other buffer
  "coc.preferences.jumpCommand": "split",

  "diagnostic-languageserver.filetypes": {
      // lint `sh` (includes `bash`) files
      "sh": "shellcheck"
  },

  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,


  // https://github.com/vuejs/vetur/issues/1834
  // Getting Property 'x' does not exist on type .... .Vetur(2339)
  "vetur.validation.script": false,

  "java.trace.server": "verbose",
  "java.format.enabled": true,
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "intelephense.environment.shortOpenTag": true,

  // https://github.com/neoclide/coc.nvim/issues/1617
  "coc.source.file.ignoreHidden": false
}

